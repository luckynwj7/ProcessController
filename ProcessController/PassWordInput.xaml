<Window x:Class="ProcessController.PasswordInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessController"
        mc:Ignorable="d"
        Title="Process Security - 계정 확인" Height="400" Width="300"
        Closing="Window_Closing">
    <StackPanel HorizontalAlignment="Center" Margin="10">
        <Image x:Name="titleImage" Source="titleIcon.png" Width="100" Margin="10"/>
        <TextBlock TextAlignment="Center" Margin="7" FontSize="30"> Process Controller</TextBlock>
        <TextBlock TextAlignment="Center" Margin="7"> 비밀번호 입력 </TextBlock>
        <PasswordBox x:Name="passwordInputText" Width="200"/>
        <Button x:Name="loginButton" Click="loginButton_Click" Padding="5" Margin="5" Width="200"> 로그인 </Button>
        <Button x:Name="exitButton" Click="exitButton_Click" Padding="5" Margin="5" Width="200"> 프로그램 종료 </Button>
        <TextBlock x:Name="statusText" TextAlignment="Center" Margin="10" Width="200"></TextBlock>
    </StackPanel>
</Window>
