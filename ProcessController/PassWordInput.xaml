<Window x:Class="ProcessController.PasswordInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessController"
        mc:Ignorable="d"
        Title="계정 확인" Height="200" Width="300"
        Closing="Window_Closing">
    <StackPanel>
        <TextBlock> 비밀번호 입력 </TextBlock>
        <TextBox x:Name="passwordInputText"/>
        <Button x:Name="loginButton" Click="loginButton_Click"> 로그인 </Button>
        <Button x:Name="exitButton" Click="exitButton_Click"> 프로그램 종료 </Button>
        <TextBlock x:Name="statusText"></TextBlock>
    </StackPanel>
</Window>
